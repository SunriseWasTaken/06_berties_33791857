<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title><%=shopData.shopName%> Book Bargain</title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
</head>
<body>
    <h1><%=shopData.shopName%> Book Bargain(under £20)</h1>

    <% if (bargainBooks && bargainBooks.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th class="price">Price (£)</th>
                </tr>
            </thead>
            <tbody>
                <% bargainBooks.forEach(function(book) { %>
                    <tr>
                        <td><%= book.name %></td>
                        <td class="price"><%= book.price %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="no-results">No bargain books at the moment.</p>
    <% } %>

    <p><a href="/">Back to home</a></p>
</body>
</html>